<link rel="stylesheet" href="/css/auth/cadastro.css" />

<div class="container">
  <!-- Lado esquerdo -->
  <a href="/" class="left">
    <img src="/assets/img/skatista_cadastro.png" alt="Skatista" />
  </a>
  <!-- Lado direito -->
  <div class="right">
    <div class="header">
      <img src="/assets/img/logocad.png" alt="icone usuario" class="icon" />
      <h2>CRIAR CONTA!</h2>
      <p>Crie sua conta</p>
    </div>

    <form class="formulario-cadastro">
      <label for="nome">Nome:</label>
      <input type="text" id="nome" placeholder="Ex.: Eduardo Rocha" />

      <label for="email">E-mail:</label>
      <input type="email" id="email" placeholder="Ex.: eduardoroch@gmail.com" />

      <label for="senha">Senha:</label>
      <input type="password" id="senha" placeholder="**********" />
      <br />
      <br />

      <button type="submit" class="btn">CADASTRAR</button>
    </form>

    <small>JÃ¡ possui uma conta? <a href="/login">Entre aqui!</a></small>
  </div>
</div>

